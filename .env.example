# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Database Connection
# Format: postgresql://user:password@host:port/database
# Local PostgreSQL example: postgresql://postgres:postgres@localhost:5432/timer_db
DATABASE_URL=postgresql://postgres:password@localhost:5432/timer_db

# CORS Origins
# Comma-separated list of allowed origins for cross-origin requests
# Local development example: http://localhost:5173,http://localhost:3000
# Production: use your actual domain(s)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Application Environment
# Options: development, staging, production
APP_ENV=development

# Server Configuration
# Port for uvicorn to listen on
SERVER_PORT=8000

# Host to bind to (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
SERVER_HOST=127.0.0.1

# Enable debug mode (set to false in production)
DEBUG=True
