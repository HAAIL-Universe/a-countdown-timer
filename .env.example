# Environment Variables â€” A Countdown Timer
# Copy this file to .env and fill in actual values for your environment.
# Do NOT commit .env to version control; use .env.example for documentation.

# ==============================================================================
# DATABASE
# ==============================================================================

# PostgreSQL connection string.
# Format: postgresql+asyncpg://<user>:<password>@<host>:<port>/<database>
# Example: postgresql+asyncpg://timer_user:timer_password@localhost:5432/timer_db
# For local development with default PostgreSQL on localhost, use:
#   postgresql+asyncpg://postgres:postgres@localhost:5432/timer_db
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/timer_db

# ==============================================================================
# CORS (Cross-Origin Resource Sharing)
# ==============================================================================

# Comma-separated list of allowed origins for CORS.
# Example: http://localhost:5173,http://localhost:3000,https://example.com
# For local development (frontend on port 5173, backend on port 8000):
CORS_ORIGINS=http://localhost:5173,http://localhost:8000

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================

# Backend API host (default: 0.0.0.0 for all interfaces).
# Set to 127.0.0.1 for localhost only.
BACKEND_HOST=0.0.0.0

# Backend API port (default: 8000).
BACKEND_PORT=8000

# ==============================================================================
# FRONTEND CONFIGURATION
# ==============================================================================

# Frontend development server port (default: 5173).
# Only used during local npm run dev.
FRONTEND_PORT=5173

# ==============================================================================
# ENVIRONMENT MODE
# ==============================================================================

# Runtime environment: development, testing, or production.
# Default: development
ENVIRONMENT=development

# ==============================================================================
# LOGGING
# ==============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL.
# Default: INFO
LOG_LEVEL=INFO
