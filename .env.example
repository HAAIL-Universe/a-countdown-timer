# A Countdown Timer - Environment Configuration
# Copy this file to .env and fill in actual values for local development

# PostgreSQL Connection String
# Format: postgresql://user:password@host:port/database
# Example: postgresql://timer_user:timer_password@localhost:5432/countdown_timer
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/countdown_timer

# CORS Origins
# Comma-separated list of allowed frontend origins
# Example for local dev: http://localhost:5173,http://localhost:3000
# Example for production: https://myapp.com,https://www.myapp.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Application Environment
# Options: development, production, testing
APP_ENV=development

# Debug Mode
# Set to 'true' for verbose logging and error details
# Set to 'false' for production
DEBUG=true

# Server Configuration
# Host to bind the FastAPI application
HOST=127.0.0.1

# Port to run the FastAPI application
PORT=8000

# Frontend Configuration
# URL where the frontend is hosted (used for redirects, CORS headers, etc.)
FRONTEND_URL=http://localhost:5173

# Database Pool Configuration
# Minimum number of connections to maintain in the pool
DB_POOL_MIN_SIZE=5

# Maximum number of connections allowed in the pool
DB_POOL_MAX_SIZE=20

# Connection timeout in seconds
DB_CONNECTION_TIMEOUT=30

# Query timeout in seconds (set to 0 for no timeout)
DB_QUERY_TIMEOUT=60

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
